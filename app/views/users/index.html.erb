<%= render 'layouts/header' %>
<div class='jumbotron'>
	<div class="container">
		<h1 align='center'>Login Manager</h1>
	</div>
</div>
<div class="col-md-10 col-md-offset-1" align="center">
		<br />
		<br />
 	<table class="wikitable">
 			<tr>
 				<th><%= sortable "id" %></th>
 				<th><%= sortable "user_name", "User Name" %></th>
 				<th><%= sortable "email" %></th>
 				<% if current_user.admin %><th><%= sortable "auth_token", "Token" %></th><% end %>
 				<th><%= sortable "poweruser", "Poweruser" %></th>
 				<th><%= sortable "admin", "Administrator" %></th>
 				<th>Edit</th>
 				<% if current_user.admin %><th>Destroy</th><% end %>

 			</tr>
			<% @users.each do |user| %>
			<tr>
				<td align="center" width="20%">
				<% if current_user[:admin] || current_user[:poweruser] %>
					<%= user.id %>
				<% else %>XXXXXX
				<% end %></td>
				<td align="center" width="20%">
				<% if current_user.admin || current_user[:poweruser] %>
					<%= link_to user.user_name, user_path(user)  %>
				<% else %> XXXXX
				<% end %></td>
				<td align="center" width="20%">
				<% if current_user.admin || current_user[:poweruser] %>
					<%= user.email %>
				<% else %>XXXXXX
				<% end %></td>
				<% if current_user.admin %>
				<td align="center" width="20%">
					<%= user.auth_token %>
				</td>
				<% end %>
				<td align="center" width="10%">
				<% if current_user.admin || current_user[:poweruser] %>
					<% if user.poweruser %>Yes
					<% else %>No
					<% end %>
				<% else %>XXXXXX
				<% end %>
				<td align="center" width="10%">
				<% if current_user.admin || current_user[:poweruser] %>
						<% if user.admin %>Yes
						<% else %>No
						<% end %>
				<% else %>XXXXXX
				<% end %>
				</td>
				<td align="center" width="20%">
				<% if current_user.admin || current_user[:poweruser] %>
				<%= link_to 'Edit', edit_user_path(user) %>
				<% else %>
				<% end %></td>
				<% if current_user.admin %>
				<td align="center" width="20%">
				<%= link_to 'Delete', user_path(user),
						method: :delete,
						data: { confirm: "Are you sure you want to destroy this data?" } %>
				<% else %>
				</td>
				<% end %>
			</tr>
		  	<% end %>
		</table>
		</br></br>
		<comments<%= render 'layouts/alert_message' %>></comments>
</div>

<div>
		<% @users.each do |user| %>
			<% if current_user.admin %>
				<% if user.admin %><%= link_to 'Clear Last Session', logout_path, class: "link_back" %>
				<% else %>
				<% end %>
			<% else %>
			<% end %>
		<% end %>
</div>